// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker-build",
      "type": "shell",
      "command": "docker build -t portfolio .",
      "problemMatcher": []
    },
    {
      "label": "docker-run",
      "type": "shell",
      "dependsOn": "docker-build",
